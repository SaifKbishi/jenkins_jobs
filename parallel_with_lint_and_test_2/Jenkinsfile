//parallel_with_lint_and_test_2
pipeline {
  agent any
  stages {
    stage('Parallel Quality') {
      parallel {
        stage('Lint') {
          steps { sh 'echo "linting…"; sleep 3' } // replace with real linter
        }
        stage('Tests') {
          steps { sh 'echo "running tests…"; sleep 5' }
        }
      }
    }
  }
}
